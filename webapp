    <script>
        // Función para mostrar el banner de las cookies
        function mostrarBannerCookies() {
            var bannerCookies = document.getElementById("cookie-banner");
            bannerCookies.style.display = "block";
        }
   
        // Función para ocultar el banner de las cookies al hacer clic en Aceptar
        function aceptarCookies() {
            var bannerCookies = document.getElementById("cookie-banner");
            bannerCookies.style.display = "none";
        }
   
        // Mostrar el banner de cookies al cargar la página
        window.addEventListener("load", mostrarBannerCookies);
    </script>
   








