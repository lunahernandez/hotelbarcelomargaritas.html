            <label for="slideActividades-3" class="slideActividades-control prevActividades controlActividades-1">‹</label>
            <label for="slideActividades-2" class="slideActividades-control nextActividades controlActividades-1">›</label>
        </div>




   
        <script>
            // JavaScript para controlar el carrusel
            const slideInnerActividades = document.querySelector('.slideActividades-inner');
            const prevButtonActividades = document.querySelector('.prevActividades');
            const nextButtonActividades = document.querySelector('.nextActividades');
            let currentIndexActividades = 0;
   
            nextButtonActividades.addEventListener('click', () => {
                currentIndexActividades = (currentIndexActividades + 1) % 3; // Cambia 3 por el número total de imágenes
                updateSlideActividades();
            });
   
            prevButtonActividades.addEventListener('click', () => {
                currentIndexActividades = (currentIndexActividades - 1 + 3) % 3; // Cambia 3 por el número total de imágenes
                updateSlideActividades();
            });
   
            function updateSlideActividades() {
                const translateXValueActividades = -currentIndexActividades * 100; // Cambia 100 según el ancho de las imágenes
                slideInnerActividades.style.transform = `translateX(${translateXValueActividades}%)`;
            }
        </script>



    <!--Fin carrousel actividades-->



