    <!-- Formulario para enviar una reseña -->
    <h3 style="text-align: center; color: rgb(162, 151, 238);">Ayúdanos a mejorar dejando tu opinión</h3>
   




    <form id="reseñaForm">
        <label for="nombre">Nombre:</label>
        <input type="text" id="nombre" required><br>








        <label for="reseña">Reseña:</label>
        <textarea id="reseña" rows="4" required></textarea><br>








        <button type="submit">Enviar Reseña</button>
    </form>




    <!-- Fin Formulario para enviar una reseña -->




    <!-- Mostrar reseñas existentes -->
    <div id="reseñas">
        <!-- Aquí se mostrarán las reseñas existentes -->
    </div>








    <script>
        // Función para manejar el envío del formulario de reseñas
        document.getElementById("reseñaForm").addEventListener("submit", function (e) {
            e.preventDefault();
           
            // Obtener los valores del formulario
            var nombre = document.getElementById("nombre").value;
            var reseña = document.getElementById("reseña").value;








            // Crear un nuevo elemento para mostrar la reseña
            var reseñaElement = document.createElement("div");
            reseñaElement.innerHTML = "<strong>" + nombre + ":</strong> " + reseña;








            // Agregar la reseña al contenedor de reseñas
            document.getElementById("reseñas").appendChild(reseñaElement);








            // Limpiar el formulario
            document.getElementById("nombre").value = "";
            document.getElementById("reseña").value = "";
        });
    </script>








